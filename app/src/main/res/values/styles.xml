<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="colorBackgroundTwitter" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorBackground">@color/background_material_dark_1</item>
    </style>

    <style name="colorBackgroundTwitter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="colorBackgroundTwitter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
